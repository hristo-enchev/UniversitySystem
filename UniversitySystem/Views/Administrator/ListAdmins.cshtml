@model UniversitySystem.ViewModel.Administrator.AdminListAdminsVM
@{
    ViewBag.Title = "ListAdmins";
}

<h2>Administrators</h2>

@Html.ActionLink("Create new administator", "CreateAdmin")

@using (Html.BeginForm(FormMethod.Post))
{       <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table style="text-align:center" class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th style="text-align:center">Username</th>
                            <th style="text-align:center">Administrator name</th>
                            <th style="text-align:center">Last name</th>
                            <th style="text-align:center">Actions</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model.Administrators)
                    {
                        <tr>
                            <td>@item.Username</td>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>
                                @*@Html.ActionLink("Edit ", "EditAdmin", new { id = item.ID }) | |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })*@
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
}