@model UniversitySystem.ViewModel.StudentVM.StudentIndexVM
@{
    ViewBag.Title = "Student page";
}

<h2>Student page</h2>
<h4>@Html.ActionLink("Change password", "ChangePassword")</h4>
<h2>@Html.Label("Faculty number : " + Model.FacultiNumber)</h2>
<h2>@Html.Label("Name : " + Model.FirstName + " " + Model.LastName)</h2>
<h2>@Html.Label("Course : " + Model.CourseName)</h2>

<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>Subject</th>
                        <th>Grade</th>
                    </tr>
                </thead>
                @foreach (var item in Model.Grades)
                {
                    <tr>
                        <td>
                            @item.Subject.Name
                        </td>
                        <td>
                            @item.GradeValue
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>   