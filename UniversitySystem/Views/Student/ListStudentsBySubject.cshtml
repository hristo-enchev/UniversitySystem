@model UniversitySystem.ViewModel.StudentVM.StudentListStudentsBySubjectVM
@{
    ViewBag.Title = "ListStudentsBySubject";
}

<h2>@Model.SubjectName</h2>

@Html.ActionLink("Deactivated students", "Deactivated")
<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>Faculty number</th>
                        <th>First name</th>
                        <th>Last name</th>
                        <th>Course</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                @foreach (var student in Model.Students)
                {
                    <tr>
                        <td>
                            @student.FacultiNumber
                        </td>
                        <td>
                            @student.FirstName
                        </td>
                        <td>
                            @student.LastName
                        </td>

                        <td>
                            @student.Course.Name
                        </td>
                        <td>
                            @Html.ActionLink("Edit student", "EditStudent", new { id = student.ID })
                            @if (student.Grades.Count > 0)
                            {
                                <span>||</span>
                                @Html.ActionLink("Export to Csv", "ExportSubjectListToCSV", new { id = student.ID })
                                <span>||</span>
                                @Html.ActionLink("Excel", "ExportSubjectListToExcel", new { id = student.ID })
                            }
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

@Html.ActionLink("Back to list", "ListStudents")
