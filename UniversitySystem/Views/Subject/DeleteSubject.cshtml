@model UniversitySystem.ViewModel.Subjects.SubjectDeleteSubjectVM
@{
    ViewBag.Title = "DeleteSubject";
}

<h2>DeleteSubject</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>User</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(m => m.SubjectID)
        <div class="form-group">
            @Html.Label("Course name :", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Label(Model.SubjectName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => Model.SubjectName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Delete" class="btn btn-default" />
            </div>
        </div>
    </div>
    <h1>@Html.ValidationMessage("Error")</h1>
}

<div>
    @Html.ActionLink("Back to List", "ListSubjects")
</div>